<Window x:Class="NewTechnology.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предлагаемая продукция партнерам" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Grid Margin="10" Background="#FFBBDCFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Каталог предлагаемой продукции" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                   HorizontalAlignment="Center" FontFamily="Bahnschrift Light SemiCondensed"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <!-- Фильтр по партнеру -->
                <StackPanel>
                    <TextBlock Text="Партнер:" FontWeight="SemiBold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed" FontSize="16"/>
                    <ComboBox x:Name="partnerComboBox" Width="400" 
                              SelectionChanged="PartnerComboBox_SelectionChanged" TextBlock.FontFamily="Bahnschrift Light SemiCondensed" TextBlock.FontSize="16">
                        <ComboBoxItem Tag="0">Все партнеры</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список продукции -->
        <DataGrid x:Name="productsGrid" Grid.Row="2" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="ProductsGrid_MouseDoubleClick" TextBlock.FontFamily="Bahnschrift Light SemiCondensed" TextBlock.FontSize="16">
            <DataGrid.Columns>
                <!-- Наименование -->
                <DataGridTextColumn Header="Наименование" 
                                    Binding="{Binding Наименование}" 
                                    Width="*"/>

                <!-- Минимальная стоимость -->
                <DataGridTextColumn Header="Мин. стоимость, руб" 
                                    Binding="{Binding МинСтоимость}" 
                                    Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Text" Value="{Binding МинСтоимость, StringFormat=N2}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Количество (из заявок) -->
                <DataGridTextColumn Header="Заказано, шт" 
                                    Binding="{Binding КоличествоВЗаявках}" 
                                    Width="120">


                </DataGridTextColumn>

                <!-- Общая стоимость заказов -->
                <DataGridTextColumn Header="Общая стоимость" 
                                    Binding="{Binding ОбщаяСтоимость}" 
                                    Width="150">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0"/>
    </Grid>
</Window>